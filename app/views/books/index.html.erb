<h1>User info</h1>

<%= image_tag user.get_profile_image(100,100) %>

<h4>name</h4>
  <%= user.name %>

<h4>introduction</h4>
  <%= user.introduction %>

<% if @book.user == current_user %>
  <%= link_to "Edit", edit_book_path(@book.id) %>
<% end %>


<h1>New book</h1>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
    <%= f.text_field :title %>
  <h4>Opinion</h4>
    <%= f.text_field :body %>

  <table>
    <td><%= f.submit 'Create Book' %></td>
  </table>

<% end %>


<% @books.each do |book| %>

  <%= image_tag book.get_image %>
  <%= link_to book.title, book_path(book.id) %>
  <%= book.body %>

<% end %>

