<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'books/list', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">

    <table class="table table-hover table-inverse">
      <h2>Users</h2>
      <thead>
        <tr>
          <th><h5>image</h5></th>
          <th><h5>name</h5></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>

