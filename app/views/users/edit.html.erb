<div class="container">

  <% if @user.errors.any? %>
    <%= @user.errors.count %>errors prohibited this book from being saved:
      <% @user.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
  <% end %>

   <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>

        <%= form_with model: @user, url: user_path(@user.id) do |f| %>
          <div class="form-group row">
            <label for="user_name">Name</label>
            <%= f.text_field :name, class: "col-md-12" %>
          </div>
          <div class="form-group row">
            <label for="user_image">Image</label><br />
            <%= f.file_field :profile_image, accept: "image/*", class: "col-md-12" %>
          </div>
          <div class="form-group row">
            <label for="user_introduction">Introduction</label><br />
            <%= f.text_area :introduction, class: "col-md-12" %>
          </div>
          <div class="form-group row">
            <%= f.submit 'Update User', class: "btn btn-secondary" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>