
  <h1>User info</h1>

  <% if @user.errors.any? %>
    <%= @user.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @user, url: book_path(@user.id) do |f| %>
    <div>
    <label for="inputName">Name</label><br />
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
    </div>
    <div>
    <label for="inputImage">Image</label><br />
      <%= f.file_field :image, placeholder: "プロフィール画像", accept: "profile_image/*" %>
    </div>
    <div>
    <label for="inputIntroduction">Introduction</label><br />
　    <%= f.text_area :introduction, id: "inputIntroduction", placeholder: "自己紹介" %>
    </div>
    <%= f.submit "Update User" %>
  <% end %>