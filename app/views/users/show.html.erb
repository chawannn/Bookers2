<h1>Books</h1>

<h5>Title</h5>
<h5>Opinion</h5>

<% @books.each do |book| %>

    <%= link_to book.title, book_path(book.id) %>
    <%= book.body %>

<% end %>

<h1>User info</h1>


<h1>New book</h1>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
    <%= f.text_field :title %>
  <h4>Opinion</h4>
    <%= f.text_field :body %>

  <table>
    <td><%= f.submit 'Create Book' %></td>
  </table>

<% end %>
