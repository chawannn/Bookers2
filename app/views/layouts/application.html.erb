<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/451923700e.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><h3>Bookers</h3></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

          <div class="row py-1 px-3">
          <% if user_signed_in? %>
            <li><i class="fa-solid fa-house"></i><%= link_to "Home", user_path(current_user.id) %></li>
            <li><i class="fa-solid fa-users"></i><%= link_to "Users", users_path %></li>
            <li><i class="fa-solid fa-book-open"></i><%= link_to "Books", books_path %></li>
            <li><i class="fa-solid fa-right-from-bracket"></i><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><i class="fa-solid fa-house"></i><%= link_to "Home", root_path %></li>
            <li><i class="fa-solid fa-link"></i><%= link_to "About", about_path %></li>
            <li><i class="fa-solid fa-user-plus"></i><%= link_to "Sign up", new_user_registration_path %></li>
            <li><i class="fa-solid fa-right-to-bracket"></i><%= link_to "Log in", new_user_session_path %></li>
          <% end %>
          </div>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>

    <footer class="bg-white text-dark pt-5 pb-4">
      <div class="container">
        <div class="row  justify-content-center">

            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

  </body>

</html>
